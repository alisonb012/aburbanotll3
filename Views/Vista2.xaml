<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="aburbanotll3.Views.Vista2"
             Title="Vista2">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label 
            Text="Visualización de datos y cálculo IESS "
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="Title"
            Margin=" 0,0,0,40"/>

        <Image Source="iees.png" HeightRequest="100"/>

        <Label x:Name="lblIdentificacion" TextColor="#D7263D" FontSize="Body"/>
        <Label x:Name="lblNombres" TextColor="#D7263D" FontSize="Body"/>
        <Label x:Name="lblApellidos" TextColor="#D7263D" FontSize="Body"/>
        <Label x:Name="lblCorreo" TextColor="#D7263D" FontSize="Body"/>
        <Label x:Name="lblSalario" TextColor="#D7263D" FontSize="Body"/>
        <Label x:Name="lblAporte" TextColor="#D7263D" FontSize="Body"/>


        <Button Margin="60,40,60,40" x:Name="btnExportar" Text="Exportar a .txt" TextColor="White" BackgroundColor="#D7263D" Clicked="btnExportar_Clicked"/>
        
    </VerticalStackLayout>
</ContentPage>